generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Curso {
  id           String       @id @default(uuid())
  nome         String
  cargaHoraria Int
  dataInicio   DateTime
  Disciplina   Disciplina[]
}

model Disciplina {
  id       String @id @default(uuid())
  nome     String
  curso_id String
  curso    Curso  @relation(fields: [curso_id], references: [id], onDelete: Cascade)
}
